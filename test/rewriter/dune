(executable
  (name pp)
  (modules pp)
  (libraries
    ppx_yojson
    ppxlib
  )
)

(rule
  (targets pp.actual)
  (deps test.ml)
  (action (run ./pp.exe --impl %{deps} -o %{targets}))
)

(alias
  (name runtest)
  (action (diff pp.expected pp.actual))
)

(test
  (name test)
  (modules test)
  (libraries
    yojson
  )
  (preprocess
    (pps
      ppx_yojson
    )
  )
)

(rule
  (targets pp_error_integer_literal.actual)
  (deps pp.exe (:input test_error_integer_literal.ml))
  (action
    (with-stderr-to    
      pp_error_integer_literal.actual
      (bash "./pp.exe -no-color --impl %{input} || true")
    )
  )
)

(alias
  (name runtest)
  (action (diff pp_error_integer_literal.expected pp_error_integer_literal.actual))
)
